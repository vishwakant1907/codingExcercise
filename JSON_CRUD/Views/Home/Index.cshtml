@* ----------- Add/Update new Inventory ----------- *@
<label>Add or Update Inventory</label>
@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
    JSON_CRUD.Models.Inventory inventories = new JSON_CRUD.Models.Inventory();
    <table class="taskList" style="WIDTH: 600px; BORDER-COLLAPSE: collapse"
           bordercolor="#bbbbbb" cellspacing="0" cellpadding="3" align="center" border="1">
        <thead>
            <tr>
                <th style="WIDTH: 20%; BACKGROUND-COLOR: #d7e4ef; TEXT-ALIGN: center" scope="col">Id</th>
                <th style="WIDTH: 20%; BACKGROUND-COLOR: #d7e4ef; TEXT-ALIGN: center" scope="col">Name</th>
                <th style="WIDTH: 20%; BACKGROUND-COLOR: #d7e4ef; TEXT-ALIGN: center" scope="col">ExpiryDate</th>
                <th style="WIDTH: 20%; BACKGROUND-COLOR: #d7e4ef; TEXT-ALIGN: center" scope="col">Price</th>
                <th style="WIDTH: 20%; BACKGROUND-COLOR: #d7e4ef; TEXT-ALIGN: center" scope="col">Quantity</th>
                <th style="WIDTH: 20%; BACKGROUND-COLOR: #d7e4ef; TEXT-ALIGN: center" scope="col">Note</th>
                <th style="WIDTH: 20%; BACKGROUND-COLOR: #d7e4ef; TEXT-ALIGN: center" scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            <tr>

                <td style="WIDTH: 20%; TEXT-ALIGN: center">
                    <input type="text" asp-for="@inventories.Id" name="Id" />
                    <br />
                </td>

                <td style="WIDTH: 20%; TEXT-ALIGN: center">
                    <input type="text" asp-for="@inventories.Name" name="Name" />
                    <br />
                </td>

                <td style="WIDTH: 20%; TEXT-ALIGN: center">
                    <input type="text" asp-for="@inventories.Price" name="Price" />
                    <br />
                </td>

                <td style="WIDTH: 20%; TEXT-ALIGN: center">
                    <input type="text" asp-for="@inventories.Note" name="Note" />
                    <br />
                </td>

                <td style="WIDTH: 20%; TEXT-ALIGN: center">
                    <input type="text" asp-for="@inventories.Quantity" name="Quantity" />
                    <br />
                </td>

