                <th style="WIDTH: 20%; BACKGROUND-COLOR: #d7e4ef; TEXT-ALIGN: center" scope="col">Note</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="WIDTH: 20%; TEXT-ALIGN: center"> @item.Id<br /></td>
                    <td style="WIDTH: 20%; TEXT-ALIGN: center"> @item.Name<br /></td>
                    <td style="WIDTH: 20%; TEXT-ALIGN: center"> @item.Expirydate<br /></td>
                    <td style="WIDTH: 20%; TEXT-ALIGN: center"> @item.Price<br /></td>
                    <td style="WIDTH: 20%; TEXT-ALIGN: center"> @item.Quantity<br /></td>
                    <td style="WIDTH: 20%; TEXT-ALIGN: center"> @item.Note<br /></td>
                </tr>

            }
        </tbody>
    </table>
